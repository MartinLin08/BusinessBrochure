<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 從不透明到透明 重覆執行 -->
    <alpha
        android:duration="4000"
        android:fromAlpha="0.0"
        android:repeatCount="0"
        android:toAlpha="1.0" />
    <!-- fromAlpha:開始時透明度
         toAlpha： 結束時透明度
         duration：動畫持續時間
         repeatCount：重複次數-->
</set>
